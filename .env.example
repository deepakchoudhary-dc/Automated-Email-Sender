# Email Service Provider Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
DATABASE_URL=sqlite:///email_sender.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/email_sender

# Redis Configuration (for background tasks)
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your_super_secret_key_here_make_it_long_and_random
ENCRYPTION_KEY=your_encryption_key_here_32_characters_long

# Application Configuration
APP_NAME=Automated Email Sender
APP_URL=http://localhost:8501
ADMIN_EMAIL=admin@yourcompany.com

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# File Storage
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@yourcompany.com
DEFAULT_FROM_NAME=Your Company Name
MAX_EMAILS_PER_HOUR=1000
MAX_EMAILS_PER_DAY=10000

# AI/OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Compliance and Legal
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=123 Main St, City, State 12345
PRIVACY_POLICY_URL=https://yourcompany.com/privacy
TERMS_OF_SERVICE_URL=https://yourcompany.com/terms
